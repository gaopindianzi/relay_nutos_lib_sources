%o : %c
	$(CC) -c $(CPFLAGS) $(INCFIRST) -I$(INCDIR) $(INCLAST) $< -o $@

%o : %S
	$(AS) -c $(ASFLAGS) $< -o $@

%s : %c
	$(CC) -c $(CPFLAGS) $(INCFIRST) -I$(INCDIR) $(INCLAST) $< -o $@

%elf: $(OBJS)
	$(CC) $(OBJS) $(LIB) $(LDFLAGS) -o $@

%obj: %elf
	$(BIN) -O avrobj $< $@

%elf: $(OBJS)
	$(CC) $(OBJS) $(LDFLAGS) $(LIBS) $(ADDLIBS) -o $@

%cof: %elf
	$(ELFCOF) -O coff-ext-avr $< $@

%hex: %elf
	$(BIN) -O ihex $< $@

%rom: %elf
	$(BIN) -O srec $< $@

%bin: %elf
	$(BIN) -O binary $< $@

%eep: %elf
	$(BIN) -j .eeprom --set-section-flags=.eeprom="alloc,load" --change-section-lma .eeprom=0 -O ihex $< $@

burn: $(TARG)
	$(BURN) $(BURNFLAGS)

install: $(TARG) $(ITARG)
	$(CP) $(TARG) $(BINDIR)/$(TARG)
	$(CP) $(ITARG) $(BINDIR)/$(ITARG)


.PHONY: cleancc
cleancc:
	-rm -f $(OBJS)
	-rm -f $(TARG)
	-rm -f $(SRCS:.c=.lst)
	-rm -f $(SRCS:.c=.lis)
	-rm -f $(SRCS:.c=.i)

.PHONY: cleanedit
cleanedit:
	-rm -f $(SRCS:.c=.bak)
	-rm -f $(SRCS:.c=.c~)
